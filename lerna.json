{
  "packages": [
    "packages/*"
  ],
  "version": "0.0.1-alpha.5",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "**/__tests/**"
      ],
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "message": "chore: [Release] publish %s",
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md"
      ],
      "changelogPreset": {
        "name": "@acme-ui/conventional-changelog",
        "scopeSequence": [
          "@acme-ui/core",
          "@acme-ui/icons",
          "@acme-ui/documents",
          "@acme-ui/cz-changelog",
          "@acme-ui/conventional-changelog"
        ]
      }
    }
  }
}
