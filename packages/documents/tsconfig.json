{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "~controls": ["./src/controls/index.tsx"],
      "~docs/*": ["./docs/*"],
      "@acme-ui/core": ["../core/src/index.ts"],
      "@acme-ui/icons": ["../icons/src/index.ts"]
    }
  },
  "include": [
    "src",
    "docs",
    "typings",
    "../core/",
    "../icons/"
  ]
}
